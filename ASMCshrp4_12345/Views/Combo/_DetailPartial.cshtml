@model ASMCshrp4_12345.ViewModels.ComboDetailViewModel

<h4>Thông tin Combo</h4>
<table class="table">
    <tr>
        <th>Mã Combo:</th>
        <td>@Model.MaComBo</td>
    </tr>
    <tr>
        <th>Tên Combo:</th>
        <td>@Model.TenComBo</td>
    </tr>
    <tr>
        <th>Số Lượng:</th>
        <td>@Model.SoLuong</td>
    </tr>
    <tr>
        <th>Đơn Giá:</th>
        <td>@Model.DonGia.ToString("C")</td>
    </tr>
    <tr>
        <th>Mô tả:</th>
        <td>@Model.MoTa</td>
    </tr>
</table>

<h4>Danh sách sản phẩm</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Số Lượng</th>
            <th>Giá Bán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model.SanPhamList)
        {
            <tr>
                <td>@sp.MaSp</td>
                <td>@sp.TenSp</td>
                <td>@sp.SoLuong</td>
                <td>@sp.GiaBan.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
