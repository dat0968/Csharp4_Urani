@model X.PagedList.IPagedList<ASMCshrp4_12345.Models.Sanpham>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Danh sách sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo sản phẩm mới</a>
</p>
<form method="get" asp-action="Index" class="form-inline my-2">
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" name="tim" class="form-control" placeholder="Tìm sản phẩm" value="@ViewData["tim"]" />
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <select name="mucgia" class="form-control">
            <option value="">Lọc theo mức giá</option>
            <option value="1" >Dưới 500,000đ</option>
            <option value="2" >500,000đ - 1,000,000đ</option>
            <option value="3" >Trên 1,000,000đ</option>
        </select>
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <select name="sapxep" class="form-control">
            <option value="">Sắp xếp</option>
            <option value="tenTang">Tên sản phẩm A-Z</option>
            <option value="tenGiam">Tên sản phẩm Z-A</option>
            <option value="giaTang">Giá thấp đến cao</option>
            <option value="giaGiam">Giá cao đến thấp</option>
            <option value="ngayGiam">Ngày sản xuất mới đến cũ</option>
            <option value="ngayTang">Ngày sản xuất cũ đến mới</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Tìm kiếm</button>
</form>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Ngày sản xuất</th>
            <th>Chất liệu</th>
            <th>Kích thước</th>
            <th>Màu sắc</th>
            <th>Thương hiệu</th>
            <th>Nhà cung cấp</th>
            <th>Hình ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenSp)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuongBan)</td>
                <td>@Html.DisplayFor(modelItem => item.DonGiaBan)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySanXuat)</td>
                <td>@Html.DisplayFor(modelItem => item.MaChatLieuNavigation.TenChatLieu)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKichThuocNavigation.TenKichThuoc)</td>
                <td>@Html.DisplayFor(modelItem => item.MaMauNavigation.TenMau)</td>
                <td>@Html.DisplayFor(modelItem => item.MaThuongHieuNavigation.TenThuongHieu )</td>
                <td>@Html.DisplayFor(modelItem => item.MaNhaCcNavigation.TenNhaCc)</td>
                <td>
                    <img src="~/HinhAnh/SanPham/@item.Hinh" alt="Hình ảnh sản phẩm" style="width: 100px; height: auto;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-12">
        <div class="pagination-wrap d-flex justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
       {
           DisplayLinkToFirstPage = PagedListDisplayMode.Always,
           DisplayLinkToLastPage = PagedListDisplayMode.Always,
           DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
           DisplayLinkToNextPage = PagedListDisplayMode.Always,
           LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
           LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",

       })
        </div>
    </div>
</div>
<style>
    h1 {
        text-align: center;
    }

    .pagination-wrap {
        margin-top: 20px;
    }

    .pagination-wrap .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding-left: 0;
    }

    .pagination-wrap .pagination a,
    .pagination-wrap .pagination span {
        display: inline-block;
        margin: 0 5px;
        padding: 10px 15px;
        border-radius: 50%;
        background-color: #f8f9fa;
        color: #007bff;
        font-size: 1.2em;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

    .pagination-wrap .pagination a:hover,
    .pagination-wrap .pagination span:hover {
        background-color: #007bff;
        color: #ffffff;
    }

    .pagination-wrap .pagination .active span {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 50%;
    }

    .pagination-wrap .pagination i {
        font-size: 1.1em;
    }

</style>