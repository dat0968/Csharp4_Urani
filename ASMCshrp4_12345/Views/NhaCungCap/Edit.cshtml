@model ASMCshrp4_12345.Models.Nhacungcap
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Sửa nhà cung cấp @Model.MaNhaCc </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNhaCc" />
            <div class="form-group">
                <label asp-for="TenNhaCc" class="control-label">Tên nhà cung cấp</label>
                <input asp-for="TenNhaCc" class="form-control" />
                <span asp-validation-for="TenNhaCc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Dịa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Lưu thông tin" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary" style="margin-right:170px;">Quay lại</a>
                    
                </div>
            </div>
        </form>
    </div>
</div>



