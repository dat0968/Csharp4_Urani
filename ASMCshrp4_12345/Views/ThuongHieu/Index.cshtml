@model IEnumerable<ASMCshrp4_12345.Models.Thuonghieu>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Thương hiệu</h1>
<form asp-action="Index" method="get" style="margin-top: 20px;">
    <div class="form-row d-flex align-items-center">
        <!-- Ô tìm kiếm -->
        <div class="col-md-5 mb-3">
            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên hoặc mã thương hiệu" />
        </div>

        <!-- Tùy chọn sắp xếp -->
        <div class="col-md-3 mb-3">
            <div class="dropdown w-100">
                <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" id="sortMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-sort"></i> Sắp xếp theo
                </button>
                <div class="dropdown-menu" aria-labelledby="sortMenuButton">
                    <button type="submit" name="sortOrder" value="AZ" class="dropdown-item">
                        <i class="fa fa-arrow-up"></i> Tên thương hiệu (A-Z)
                    </button>
                    <button type="submit" name="sortOrder" value="ZA" class="dropdown-item">
                        <i class="fa fa-arrow-down"></i> Tên thương hiệu (Z-A)
                    </button>
                </div>
            </div>
        </div>

        <!-- Button Tìm kiếm -->
        <div class="col-md-2 mb-3">
            <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
        </div>
    </div>
</form>
<p>
    <a asp-action="Create" class="btn btn-success">Tạo thương hiệu mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã thương hiệu</th>
            <th>Tên thương hiệu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaThuongHieu</td>
                <td>@item.TenThuongHieu</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaThuongHieu" class="btn btn-primary">Sửa</a>

                    <form asp-action="Delete" asp-asp-controller="NhaCungCap" asp-route-id="@item.MaThuongHieu" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này không?');">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
