@model IEnumerable<ASMCshrp4_12345.Models.Thuonghieu>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Thương hiệu</h1>
<form asp-action="Index" method="get">
    <div class="form-group d-flex justify-content-between">
        <div class="input-group mb-3" style="width:600px;height:33px;margin-top:20px;">

            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên hoặc mã thương hiệu" />
            <div class="input-group-append">

                <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
            </div>
        </div>

        <div class="form-group" style="margin-right:350px;margin-top:20px;width:200px;height:40px;">
            <select name="sortOrder" id="sortOrder" class="form-control" onchange="this.form.submit()">
                <option value="">Sắp xếp theo tên thương hiệu</option>
                <option value="AZ">Từ A đến Z</option>
                <option value="ZA">Từ Z đến A</option>
            </select>
        </div>
    </div>
</form>
<p>
    <button class="Tao" style="background-color:aqua;padding:8px;border:solid 1px aqua; border-radius:5px;"><a asp-action="Create">Tạo thương hiệu Mới</a></button>

</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã thương hiệu</th>
            <th>Tên thương hiệu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaThuongHieu</td>
                <td>@item.TenThuongHieu</td>
                <td>
                    <button class="btn btn-primary" type="submit" style="width:70px;"><a asp-action="Edit" asp-route-id="@item.MaThuongHieu">Sửa</a></button>

                    <form asp-action="Delete" asp-asp-controller="NhaCungCap" asp-route-id="@item.MaThuongHieu" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này không?');">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
