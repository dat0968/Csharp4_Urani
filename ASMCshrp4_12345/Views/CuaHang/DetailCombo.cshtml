@model IEnumerable<ComBo>

@{
    ViewData["Title"] = "Details";
}
<style>
    /* Thêm lớp CSS để thay đổi màu nút tăng giảm */
    .btn-yellow {
        background-color: rgb(255, 211, 51);
        border-color: rgb(255, 211, 51);
    color: black;
    }

    .btn-yellow:hover {
            background-color: rgb(255, 211, 51); /* Màu vàng đậm hơn khi hover */
            border-color: rgb(255, 211, 51);
    color: black;
    }

    input[type=number]::-webkit-outer-spin-button,
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

</style>
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">TRANG CHỦ</a>

                <span class="breadcrumb-item active">CHI TIẾT SẢN PHẨM</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
@foreach (var combo in Model)
{
    var hinhanhcb = combo .AnhComBos?.FirstOrDefault()?.HinhAnh;
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 mb-30">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                        @if (combo .AnhComBos != null)
                        {
                            <div class="carousel-item active">
                                <img class="w-100 h-90" src="~/HinhAnh/SanPham/@hinhanhcb" alt="Image">
                            </div>
                            foreach (var hacb in combo.AnhComBos.Skip(1))
                            {
                                <div class="carousel-item">
                                    <img class="w-100 h-90" src="~/HinhAnh/SanPham/@hacb.HinhAnh" alt="Image">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img class="w-100 h-90" src="~/HinhAnh/SanPham/@hinhanhcb" alt="Image">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-7 h-auto mb-30">
                <div class="h-100 bg-light p-30">
                    <h3>@combo.TenComBo</h3>
                    <div class="d-flex mb-3">
                        @* <small class="pt-1">(@combo.BinhLuans.Count() bình luận)</small> *@
                    </div>
                    <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@combo.MaComBo">
                        <div class="d-flex mb-3">
                            <strong class="text-dark mr-3">Kích Thước:</strong>
                            @foreach (var kichthuoc in combo.CtComBos.Select(c => c.TenKichThuoc).Distinct())
                            {
                                <div class="custom-control custom-radio custom-control-inline mr-3">
                                    <input type="radio" class="custom-control-input" id="size-@kichthuoc" name="size" value="@kichthuoc" required>
                                    <label class="custom-control-label" for="size-@kichthuoc">@kichthuoc</label>
                                </div>
                            }
                        </div>

                        <div class="d-flex mb-4">
                            <strong class="text-dark mr-3">Màu:</strong>
                            @foreach (var ms in combo.CtComBos.Select(c => c.TenMau).Distinct())
                            {
                                <div class="custom-control custom-radio custom-control-inline mr-3">
                                    <input type="radio" class="custom-control-input" id="color-@ms" name="color" value="@ms" required>
                                    <label class="custom-control-label" for="color-@ms">@ms</label>
                                </div>
                            }
                        </div>

                        <div class="d-flex mb-4">
                            <strong class="text-dark mr-3">Chất liệu:</strong>
                            @foreach (var cl in combo.CtComBos.Select(c => c.TenChatLieu).Distinct())
                            {
                                <div class="custom-control custom-radio custom-control-inline mr-3">
                                    <input type="radio" class="custom-control-input" id="material-@cl" name="material" value="@cl" required>
                                    <label class="custom-control-label" for="material-@cl">@cl</label>
                                </div>
                            }
                        </div>

                        <!--Nút tăng giảm số lượng-->
                        <div class="d-flex align-items-center mb-4">
                            <div class="input-group" style="width: 120px;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-yellow" type="button" onclick="decreaseQuantity()">-</button>
                                </div>
                                <input type="number" id="quantity" name="quantity" class="form-control text-center" value="1" min="1" max="@combo.SoLuong">
                                <div class="input-group-append">
                                    <button class="btn btn-yellow" type="button" onclick="increaseQuantity()">+</button>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary px-3 ml-3">
                                <i class="fa fa-shopping-cart mr-1"></i> Thêm giỏ hàng
                            </button>
                        </div>
                    </form>

                    <div class="tab-content">
                        <div class="nav nav-tabs mb-4">
                            <a style="margin-top: 35px" class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">MÔ TẢ COMBO</a>
                        </div>
                        <div class="tab-pane fade show active" id="tab-pane-1">
                            <p>@combo.MoTa</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Shop Detail End -->
<!-- Products Start -->
<!-- Sản phẩm liên quan Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-12">
            <h3 class="section-title mb-4">COMBO LIÊN QUAN</h3>
        </div>
    </div>
    <div class="row px-xl-5">
        @foreach (var sp in (List<ComBo>)ViewBag.comBoTuongTu)
        {
            var hinhanhcbo = sp.AnhComBos?.FirstOrDefault()?.HinhAnh;
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <!-- Sản phẩm item -->
                <div class="product-item bg-light border rounded">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="~/HinhAnh/SanPham/@hinhanhcbo" alt="@sp.TenComBo">
                        <div class="product-action">
                            <a asp-action="DetailCombo" asp-controller="CuaHang" asp-route-idcombo="@sp.MaComBo" class="btn btn-outline-dark btn-square">Xem Thêm</a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a asp-action="DetailCombo" asp-controller="CuaHang" asp-route-idcombo="@sp.MaComBo" class="h6 text-decoration-none text-truncate">@sp.TenComBo</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@sp.DonGia.ToString("#,##0") đ</h5>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Sản phẩm liên quan End -->
<!-- Products End -->
