@model IEnumerable<ASMCshrp4_12345.ViewModels.CartViewModel>
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">TRANG CHỦ</a>

                <span class="breadcrumb-item active">GIỎ HÀNG</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>SẢN PHẨM</th>
                        <th>MÀU</th>
                        <th>CHẤT LIỆU</th>
                        <th>KÍCH THƯỚC</th>
                        <th>GIÁ</th>
                        <th>SỐ LƯỢNG</th>
                        <th>THÀNH TIỀN</th>
                        <th>XÓA</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="~/HinhAnh/SanPham/@item.Hinh" alt="" style="width: 50px;"> @item.TenHh</td>
                            <td class="align-middle">@item.Mau</td>
                            <td class="align-middle">@item.ChatLieu</td>
                            <td class="align-middle">@item.KichThuoc</td>
                            <td class="align-middle">@item.Gia VNĐ</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" data-max-quantity="@item.SoluongAvailable" class="form-control form-control-sm bg-secondary border-0 text-center" min="1" max="@item.SoluongAvailable" value="@item.SoLuong">
                              
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@item.ThanhTien VNĐ</td>
                            <td class="align-middle"><a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.MaHh" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                        </tr>
                    }                                      
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">

            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">TỔNG GIÁ TRỊ ĐƠN HÀNG</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>TỔNG TIỀN</h6>
                        <h6>@Model.Sum(p => p.ThanhTien)</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">FREE SHIP</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>TỔNG TIỀN</h5>
                        <h5>@Model.Sum(p => p.ThanhTien)</h5>
                    </div>
                    <a asp-action="Checkout" asp-controller="Cart" class="btn btn-block btn-primary font-weight-bold my-3 py-3">ĐẶT HÀNG</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cart End -->

<script>
    window.onload = function() {
    document.querySelectorAll("tr").forEach(function(row) {
        var input = row.querySelector("input[type='text']");
        
        // Kiểm tra nếu input tồn tại
        if (input) {
            var maxQuantity = parseInt(input.getAttribute("max")) || 1;

            input.addEventListener("input", function() {
                var quantity = parseInt(input.value);
                // Kiểm tra nếu giá trị không hợp lệ hoặc nhỏ hơn 1
                if (quantity > maxQuantity) {
                    input.value = maxQuantity;
                } else if (quantity < 1 || isNaN(quantity)) {
                    input.value = 1;
                }
            });

            var btnMinus = row.querySelector(".btn-minus");
            if (btnMinus) {
                btnMinus.addEventListener("click", function(event) {
                    event.preventDefault();
                    let quantity = parseInt(input.value) || 1;
                    if (quantity > 1) {
                        input.value = quantity - 1;
                    }
                });
            }

            var btnPlus = row.querySelector(".btn-plus");
            if (btnPlus) {
                btnPlus.addEventListener("click", function(event) {
                    event.preventDefault();
                    let quantity = parseInt(input.value) || 1;
                    if (quantity < maxQuantity) {
                        input.value = quantity + 1;
                    } else {
                        input.value = maxQuantity;
                    }
                });
            }
        }
    });
};
</script>



<a asp-controller="Cart" asp-action="ThongTinDonHang">thông tin đơn hàng</a>
<!-- Cart End -->

