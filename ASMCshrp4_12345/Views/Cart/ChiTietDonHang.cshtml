@model IEnumerable<ASMCshrp4_12345.Models.Chitiethoadon>
@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered  align-middle">
            <thead class="table">
                <tr>
                    <th class="text-center">Tên Sản Phẩm</th>
                    <th class="text-center">Màu Sắc</th>
                    <th class="text-center">Chất Liệu</th>
                    <th class="text-center">Kích Thước</th>
                    <th class="text-center">Số Lượng</th>
                    <th class="text-center">Đơn Giá</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var chiTiet in Model)
                {
                    <tr>
                        <td>@chiTiet.MaSpNavigation?.TenSp</td>
                        <td class="text-center">@chiTiet.MauSac_ThuocTinhSuyDien</td>
                        <td class="text-center">@chiTiet.ChatLieu_ThuocTinhSuyDien</td>
                        <td class="text-center">@chiTiet.KichThuoc_ThuocTinhSuyDien</td>
                        <td class="text-center">@chiTiet.SoLuongMua</td>
                        <td class="text-end">@chiTiet.DonGia.ToString("N0") ₫</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-danger text-center">Không có chi tiết đơn hàng để hiển thị.</p>
}
